<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="1" author="valio">
        <createTable tableName="christmas">
            <column name="created_at" type="timestamp">
                <constraints nullable="false"/>
            </column>

            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>

            <column name="modified_at" type="timestamp">
                <constraints nullable="false"/>
            </column>

            <column name="year" type="int">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="gift_assign_date" type="date">
                <constraints nullable="false"/>
            </column>

            <column name="christmas_date" type="date">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="participant">
            <column name="created_at" type="timestamp">
                <constraints nullable="false"/>
            </column>

            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>

            <column name="modified_at" type="timestamp">
                <constraints nullable="false"/>
            </column>

            <column name="person_id" type="varchar(100)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="family_id" type="varchar(100)">
                <constraints nullable="false"/>
            </column>

            <column name="name" type="varchar(1000)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>